{
    "name": "mglaman/phpstan-twig",
    "description": "Provides inspection of Twig templates with PHPStan",
    "type": "phpstan-extension",
    "require": {
        "phpstan/phpstan": "^0.11.16",
        "twig/twig": "^1 || ^2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan-deprecation-rules": "^0.11.2"
    },
    "autoload": {
        "psr-4": {
            "PHPStan\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/src"]
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Glaman",
            "email": "nmd.matt@gmail.com"
        }
    ],
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
